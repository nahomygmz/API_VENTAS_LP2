@model IEnumerable<ClienteAPI.Models.Proveedor>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Proveedores</h2>

<p>
    @Html.ActionLink("Agregar Proveedor", "Create")
</p>
<table class="customTable">
    <tr>
        <th>
            ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdProveedor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdProveedor }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdProveedor })
        </td>
    </tr>
}

</table>
